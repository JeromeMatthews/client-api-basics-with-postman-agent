header.header 
    nav.nav.nav--tours
        a(href="/").nav__el ALL CITIES
        //-When a div element contains just one child element you can omit the div and just place the child element. example: <div class="header__logo" = .header__logo
    //-.header__logo  
        img(src="/img/logo-white.png" alt="Natours logo")
    nav.nav.nav--user 
     if user
        a.nav__el.nav__el--logout Log out
        a.nav__el(href="/me")
            img.nav__user-img(src=`img/users/${user.photo}` alt=`Photo of ${user.name}`)
            span= user.name.split(' ')[0]
     else
      a.nav__el.nav__el(href="/login") Log In 
      button.nav__el.nav__el--cla Sign Up 